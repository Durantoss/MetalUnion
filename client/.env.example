# MoshUnion Client Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================

# Get these from your Supabase project settings > API
VITE_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
VITE_SUPABASE_ANON_KEY="[YOUR-ANON-KEY]"

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Environment (development, production, staging)
VITE_NODE_ENV="production"

# Application URL (for CORS and redirects)
VITE_APP_URL="https://moshunion.rocks"

# ===========================================
# API KEYS (Optional - for client-side features)
# ===========================================

# OpenAI API Key (if using AI features client-side)
# VITE_OPENAI_API_KEY="your-actual-openai-api-key"

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable features
VITE_ENABLE_REAL_TIME="true"
VITE_ENABLE_NOTIFICATIONS="true"
VITE_ENABLE_LOCATION_FEATURES="true"

# ===========================================
# ANALYTICS & MONITORING
# ===========================================

# Google Analytics ID
# VITE_GA_TRACKING_ID="your-ga-tracking-id"

# Sentry DSN (for error tracking)
# VITE_SENTRY_DSN="your-sentry-dsn"

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Enable debug logging in development
VITE_DEBUG="false"

# API Base URL (if using external APIs)
VITE_API_BASE_URL="https://api.moshunion.rocks"
